{
  "expo": {
    "name": "nidhoggr",
    "slug": "nidhoggr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cette app utilise la caméra pour prendre des photos."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["CAMERA"]
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-sqlite",
      [
        "expo-image-picker",
        {
          "cameraPermission": "L'application a besoin d'accéder à votre caméra pour prendre une photo.",
          "photosPermission": "L'application doit accéder à vos photos pour les afficher."
        }
      ]
    ]
  }
}
