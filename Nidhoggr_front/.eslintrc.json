{
  "root": true,
  "ignorePatterns": ["*.html"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "projectService": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn",
        "@typescript-eslint/no-unused-vars": "warn",
        "prefer-const": "warn",
        "no-empty": "warn",
        "@typescript-eslint/no-unused-expressions": "warn"
      }
    }
  ]
}
